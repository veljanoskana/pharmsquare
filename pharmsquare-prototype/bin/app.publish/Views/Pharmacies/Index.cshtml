@model IEnumerable<pharmsquare_prototype.Models.Pharmacy>

@{
    ViewBag.Title = "Index";
}

<h2>Аптеки</h2>

<table id="myTable" class="table">
    <thead>
        <tr>
            <th>
                Име
            </th>
            <th>
                Работно време
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WorkingHours)
                </td>
                <td>
                    @Html.ActionLink("Детали", "ShowInfo", new { id = item.ID }, new { @class = "btn btn-info" })
                </td>
            </tr>
        }
    </tbody>

</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#myTable").dataTable();
        });
    </script>
    }
